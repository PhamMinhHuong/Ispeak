mixin header()
  header.header
    .header__top
      .header__top-info
        .header__top-language
          span Vietnamese
        .header__top-hotline
          | Hotline: 19002215 - (024) 665 08862
      .header__top-user
        ul.side-right
          li.side-right__item
            a(href='#') Đăng ký
          li.side-right__item
            a(href='#') Đăng nhập
          li.side-right__item.side-right__item--search
            form.form-search(action='search.html')
              button.form-search__button(type='submit')
                span.ion-ios-search
              input.form-search__input(type='search' name='q' maxlength='200' placeholder='Seach...')
