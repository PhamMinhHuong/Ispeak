//-------------------------------------------------------
//- Styleguides :: Buttons
//-------------------------------------------------------

//- Buttons :: Type
h2 Buttons Type
-
  var buttonTypes = [
    { type: 'primary' },
    { type: 'secondary' }
  ];
.row
  each val in buttonTypes
    .col-4
      .code-example
        .demo
          +buttons({
            text: 'normal',
            type: val.type
          })
        pre
          code
            | +buttons({
            |   text: 'normal',
            |   type: '#{val.type}'
            | })

//- Buttons :: Size
h2 Button Size
-
  var buttonSizes = [
    { size: 'small' },
    { size: 'basic' },
    { size: 'large' }
  ];
.row
  each val in buttonSizes
    .col-6
      .code-example
        .demo
          +buttons({
            text: 'normal',
            type: 'primary',
            size: val.size
          })
        pre
          code
            | +buttons({
            |   text: 'normal',
            |   type: 'primary',
            |   size: '#{val.size}'
            | })
    .col-6
      .code-example
        .demo
          +buttons({
            text: 'normal',
            type: 'secondary',
            size: val.size
          })
        pre
          code
            | +buttons({
            |   text: 'normal',
            |   type: 'secondary',
            |   size: '#{val.size}'
            | })

