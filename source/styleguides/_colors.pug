//-------------------------------------------------------
//- Styleguides :: Colors
//-------------------------------------------------------

-
  var colors = [
    { key: '$white', color: '#fff' },
    { key: '$black', color: '#000' },
    { key: '$blue', color: '#076fd6' },
    { key: '$blue-light', color: '#1982eb' },
    { key: '$pink', color: '#fc78b9' },
    { key: '$red', color: '#de4e59' },
    { key: '$orange', color: '#ffac33' },
    { key: '$green', color: '#29cd89' },
    { key: '$gray', color: '#ededed' },
    { key: '$gray-light', color: '#f7f9fa' },
    { key: '$gray-lighter', color: '#8e9fb5' },
    { key: '$gray-dark', color: '#173050' },
    { key: '$gray-darker', color: '#283b53' }
  ];

.row
  each val in colors
    .col-3
      .code-example
        .demo(style=`background-color: ${val.color}; width: 100%; height: 100px`)
        pre
          code
            | #{val.key}: #{val.color}
